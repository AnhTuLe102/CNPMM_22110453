<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>User List</h2>
            <a href="/crud" class="btn btn-primary">Create New User</a>
        </div>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < datalist.length; i++) { %>
                    <tr>
                        <td>
                            <%= datalist[i].firstName %>
                        </td>
                        <td>
                            <%= datalist[i].lastName %>
                        </td>
                        <td>
                            <%= datalist[i].email %>
                        </td>
                        <td>
                            <%= new Date(datalist[i].createdAt).toLocaleDateString() %>
                        </td>
                        <td>
                            <a href="/edit-crud?id=<%= datalist[i]._id %>" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/delete-crud?id=<%= datalist[i]._id %>" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>